.case-item
  position relative
  width 100%
  overflow hidden
  cursor pointer
  &:hover
    & {$p}__img
      transform scale(1.15)
    & {$p}__overlay
      visibility visible
      opacity 1
      transform scale(1)
      transition-delay 0.1s
  &__inner
    padding-top 100%
  &__img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition transform 0.7s 0.1s cubic-bezier(0.165, 0.84, 0.44, 1)
  &__overlay
    display flex
    flex-flow column
    justify-content center
    align-items center
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background rgba($blue-1, 0.9)
    text-align center
    padding 20px
    text-decoration none !important
    color white !important
    visibility hidden
    opacity 0
    transform scale(1.3)
    transition-property visibility, opacity, transform
    transition-duration 0s, 0.7s, 0.7s
    transition-delay 0.8s, 0.1s, 0.1s
    transition-timing-function cubic-bezier(0.165, 0.84, 0.44, 1)
  &__title
    color inherit
    font-size 16px
    text-transform uppercase
    font-weight 900
    letter-spacing 0.3em
    margin 0 0 5px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    width 100%
  &__category
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    width 100%
    margin 0 0 30px
  &__icon-view
    font-size 36px
    line-height 1em

  @media (min-width: 480px)
    width percentage(1/2)

  @media (min-width: $screen-sm-min)
    width percentage(1/3)


