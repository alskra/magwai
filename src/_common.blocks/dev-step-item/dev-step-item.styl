.dev-step-item
  text-align center
  margin 0 30px 30px
  &__icon
    square 100px
    margin 0 auto 27px
    border-radius 50%
    display flex
    justify-content center
    align-items center
    font-size 42px
    text-transform uppercase
    font-weight 700
    color $blue-1
    padding 5px
    position relative
    &:before
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      border 5px solid #95acbc
      border-radius 50%
      border-right-color #cfd9e0
      transform rotate(135deg)
  &__title
    font-size 14px
    line-height ($line-height-base)em
  &_num
    &_2
      & {$p}__icon
        &:before
          transform rotate(45deg)
    &_3
      & {$p}__icon
        &:before
          transform rotate(-45deg)