.btn
  &_type_1
    color $text-color
    font-weight 500
    font-size 13px
    text-transform uppercase
    border 2px solid
    padding 6px 25px 4px
    height 44px
    &:hover,
    &:focus,
    &.focus
      color white
      background-color $blue-2
      border-color $blue-2
    &:active,
    &.active
      box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)

  &__label
    overflow hidden
    text-overflow ellipsis

