@keyframes loading
  100%
    transform rotate(360deg)

.loading
  &_before
    &:before
      content ''
      position absolute
      width 30px
      height 30px
      border 3px solid $blue-1
      border-right-color transparent
      border-radius 50%
      margin auto
      top 0
      left 0
      right 0
      bottom 0
      animation loading 1.2s linear infinite

.page
  &_page_home
    & {$p}__header
      background #2a333c
      margin 0 0 20px
      padding 30px 0
    & {$p}__title
      color white
      margin 0
      small
        color inherit
  &_contacts
    .footer
      &__col
        &_hidden
          display block
  &_error
    .wrapper
      background url("page-bg-2.jpg") no-repeat 50% 0/cover white
      background-attachment fixed
    .footer
      .btn
        &_on-index
          display flex