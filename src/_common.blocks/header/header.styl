$header-height = 54px
.header
  position fixed
  top 0
  left 0
  width 100%
  background-color #295786
  box-shadow inset 0 1px rgba(white, 0.1), 0 -10px #295786
  z-index $zindex-navbar-fixed
  &__inner
    display flex
    justify-content space-between
    height $header-height
    &:before, &:after
      content normal
  &__contacts
    flex-grow 1
    display flex
    align-items center
    justify-content flex-end
    padding-right 25px
    border-right 1px solid rgba(white, 0.1)
    margin 0 20px 0 0
  &__tel
    color white
    font-size 15px
    line-height 1em
    text-decoration none
    font-weight 700
    &:hover, &:focus
      color white
      text-decoration none
