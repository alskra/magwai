.service-item
  display flex
  flex-flow column
  width 100%
  color white
  text-align center
  &:nth-child(4n + 1)
    background-color #386898
  &:nth-child(4n + 2)
    background-color #235180
  &:nth-child(4n + 3)
    background-color #2c5c8c
  &:nth-child(4n + 4)
    background-color #194470
  &:hover
    & {$p}__icon-title
      text-shadow 0 0 5px rgba($blue-2, 0.8)
      &.icon-devices
        transform perspective(100px) rotateY(45deg)
      &.icon-ad
        transform perspective(100px) rotate(30deg) rotateX(45deg)
      &.icon-idea
        transform perspective(100px) rotateY(180deg)
      &.icon-settings
        transform perspective(100px) rotate(90deg)
    & {$p}__title
      background-size 100% 2px
  p
    &:last-child
      margin-bottom 0
  .ul-list
    padding-left 0
    &:last-child
      margin-bottom 0
    li
      margin-bottom 10px
      &:before
        display none
  &__inner
    flex-grow 1
    display flex
    flex-flow column
    justify-content center
    color inherit !important
    text-decoration none !important
    padding 30px
    transition 0.7s cubic-bezier(0.165, 0.84, 0.44, 1)
  &__icon-title
    align-self center
    display flex
    justify-content center
    align-items center
    margin-bottom 24px
    height 50px
    color $blue-2
    font-size 42px
    line-height 1
    transform perspective(100px)
    transition inherit
    &.icon-ad
      font-size 46px
    &.icon-idea
      font-size 50px
    &.icon-settings
      font-size 49px
  &__title
    color inherit
    margin 0 0 30px
    font-weight 700
    font-size 14px
    padding-bottom 17px
    background linear-gradient($blue-1, $blue-1) no-repeat 50% 100%/65px 2px
    transition inherit


  @media (min-width $screen-sm-min)
    width 50%
    text-align left
    .ul-list
      padding-left 20px
      li
        &:before
          display inline
    &__inner
      padding 60px
    &__icon-title
      align-self flex-start
    &__title
      background-position 0 100%