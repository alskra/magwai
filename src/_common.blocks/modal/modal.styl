.modal
  max-width 500px
  margin 0 auto
  color white
  padding 60px 15px 30px
  &__btn-close
    position absolute
    top 15px
    right 15px
    color #6587a8
    font-size 26px
    line-height 1em
    &:hover, &:focus
      color white
  &__header
    padding 30px 0
    margin-top -30px
  &__title
    text-align center
    font-size 20px
    letter-spacing 0.025em
    margin 0
    padding-bottom 15px
    color white
    background linear-gradient($blue-2, $blue-2) no-repeat 50% 100%/65px 2px

