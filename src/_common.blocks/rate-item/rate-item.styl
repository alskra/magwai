.rate-item
  padding 30px 0
  border-top 1px solid #e8edf1
  page-break-inside avoid
  .tags
    margin-bottom 10px
  &__header
    display flex
    align-items flex-start
    font-size 12px
    text-transform uppercase
    font-weight 700
    line-height 1.25em
    color #9fb3c8
    margin 0 0 12px
  &__rate-info
    flex-grow 1
    padding 7px 0 8px
  &__rate-value
    color #395b77
  &__rate-icon-wrap
    margin-left 15px
    height 30px
    display flex
    align-items center
  &__rate-icon
    max-width 120px
    max-height 100%
    opacity 0.7
  &__title
    margin 0 0 20px
  &__title-link
    color inherit
    text-decoration none
    &:hover, &:focus
      color $blue-1
      text-decoration none
  &__text
    margin-bottom ($line-height-computed/2)
  &__rate-link
    color $headings-color
    text-decoration none
    &:hover, &:focus
      color $blue-1
      text-decoration none

  @media (min-width $screen-sm-min)
    max-width 600px