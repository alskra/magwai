.form-comment
  &__inner
    display flex
    flex-flow column
  &__col
    &_left
      margin 0 0 30px
      text-align center

  @media (min-width $screen-sm-min)
    padding-top 12px
    &__inner
      flex-flow row wrap
      align-items flex-start
    &__col
      &_left
        text-align left
        margin -12px 25px 0 0
        overflow hidden
      &_right
        flex 1 1 auto
        display flex
        flex-flow row wrap
        align-items flex-start
    &__row
      &_1
        width 100%
      &_2
        width calc(50% - 8px)
        margin-right 8px
      &_3
        width calc(50% - 8px)
        margin-left 8px


