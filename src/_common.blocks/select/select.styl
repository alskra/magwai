.select
  display inline-block
  vertical-align top

.select-dd
  .ik_select_list
    border 2px solid $blue-1
    margin-top -2px
    background white
    box-shadow 0 6px 12px rgba(0, 0, 0, .175)
  ul
    list-style none
    margin 0
    padding 0
    li
      padding 8px 30px 7px 15px
      cursor pointer
      font-size 14px
      text-transform uppercase
      font-weight 300
      color $text-color
      transition 0.15s
      &.ik_select_hover
        background $blue-1
        color white
  .ik_select_option_label
    display block
    overflow hidden
    white-space nowrap